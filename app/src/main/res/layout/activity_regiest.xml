<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.view.RegiestActivity">




    <EditText
        android:id="@+id/reg_username"
        android:hint="@string/reg_hint_userNema"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/reg_password"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/reg_username"
        android:hint="@string/reg_hint_passWord"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/reg_confirm_password"
        android:layout_margin="30dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/reg_password"
        android:hint="@string/reg_hint_passWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/reg_regbutton"
        app:layout_constraintTop_toBottomOf="@id/reg_confirm_password"
        android:layout_width="wrap_content"
        android:text="@string/regiest"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />







</androidx.constraintlayout.widget.ConstraintLayout>